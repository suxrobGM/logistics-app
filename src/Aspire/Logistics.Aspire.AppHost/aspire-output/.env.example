# ===========================================
# REQUIRED: Service Ports
# ===========================================
API_PORT="7000"
IDENTITY_SERVER_PORT="7001"
ADMIN_APP_PORT="7002"
OFFICE_APP_PORT="7003"

# ===========================================
# REQUIRED: Image container names
# ===========================================
API_IMAGE="ghcr.io/suxrobgm/logistics-app/api:latest"
ADMIN_APP_IMAGE="ghcr.io/suxrobgm/logistics-app/admin:latest"
IDENTITY_SERVER_IMAGE="ghcr.io/suxrobgm/logistics-app/identity:latest"
MIGRATOR_IMAGE="ghcr.io/suxrobgm/logistics-app/migrator:latest"

# ===========================================
# REQUIRED: Database
# ===========================================
POSTGRES_PASSWORD="your-secure-postgres-password"

# ===========================================
# REQUIRED: Authentication (JWT)
# ===========================================
# Minimum 32 characters for security
Jwt__Secret="your-super-secret-jwt-key-minimum-32-characters"
Jwt__Issuer="https://id.yourdomain.com"
Jwt__Audience="https://api.yourdomain.com"
Jwt__ExpiryInDays="7"

# ===========================================
# REQUIRED: Domain & SSL
# ===========================================
DOMAIN="yourdomain.com"
LETSENCRYPT_EMAIL="admin@yourdomain.com"

# ===========================================
# REQUIRED: Stripe Integration
# ===========================================
Stripe__SecretKey="sk_live_xxx"
Stripe__WebhookSecret="whsec_xxx"
Stripe__PublishableKey="pk_live_xxx"
STRIPE_API_KEY="sk_test_xxx"

# ===========================================
# OPTIONAL: External Services
# ===========================================
# Mapbox (for maps)
Mapbox__AccessToken="pk.xxx"

# Firebase (for push notifications)
Firebase__ServerKey="xxx"
Firebase__ProjectId="your-project-id"

# Azure Blob Storage (for document storage)
AzureStorage__ConnectionString="DefaultEndpointsProtocol=https;AccountName=xxx;AccountKey=xxx"

# ===========================================
# ASP.NET Core Settings
# ===========================================
ASPNETCORE_ENVIRONMENT="Production"
ASPNETCORE_FORWARDEDHEADERS_ENABLED="true"
