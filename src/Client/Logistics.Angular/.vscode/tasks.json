{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:shared",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build:shared"],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build:tms",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build:tms"],
      "group": "build",
      "dependsOn": ["build:shared"],
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build:customer",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build:customer"],
      "group": "build",
      "dependsOn": ["build:shared"],
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "build:all",
      "type": "shell",
      "command": "bun",
      "args": ["run", "build:all"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "serve:tms",
      "type": "shell",
      "command": "bun",
      "args": ["run", "start:tms"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Application bundle generation complete"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "serve"
      }
    },
    {
      "label": "serve:customer",
      "type": "shell",
      "command": "bun",
      "args": ["run", "start:customer"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Application bundle generation complete"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "serve"
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "bun",
      "args": ["run", "lint"],
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "format",
      "type": "shell",
      "command": "bun",
      "args": ["run", "format"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "gen:api",
      "type": "shell",
      "command": "bun",
      "args": ["run", "gen:api"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
