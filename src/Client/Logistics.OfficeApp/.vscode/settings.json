{
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.configPath": "./.prettierrc.js",
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/.angular": true,
    "**/dist": true
  },
  "angular-schematics.schematicsDefaultOptions": {
    "angular-*": {
      "style": "scss",
      "externalTemplate": true
    }
  }
}
