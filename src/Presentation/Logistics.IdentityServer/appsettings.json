{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.AspNetCore.DataProtection": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/identityapp-.log",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Month"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "ConnectionStrings": {
    "MasterDatabase": "Host=localhost; Port=5432; Database=master_logistics; Username=postgres; Password=Test12345#; Include Error Detail=true",
    "DefaultTenantDatabase": "Host=localhost; Port=5432; Database=default_logistics; Username=postgres; Password=Test12345#; Include Error Detail=true"
  },
  "GoogleRecaptcha": {
    "SiteKey": "<Google captcha site key>",
    "SecretKey": "<Google captcha secret key>"
  },
  "Smtp": {
    "SenderEmail": "<Email address>",
    "SenderName": "Logistics NoReply",
    "UserName": "<Email account username>",
    "Password": "<Email account password>",
    "Host": "<Server address>",
    "Port": 587
  },
