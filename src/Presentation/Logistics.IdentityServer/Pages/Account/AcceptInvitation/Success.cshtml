@page
@model Logistics.IdentityServer.Pages.Account.AcceptInvitation.Success

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                </div>
                <h3 class="text-success mb-3">Welcome!</h3>
                <p class="text-muted mb-2">
                    You've successfully joined <strong>@Model.TenantName</strong>
                </p>
                @if (!string.IsNullOrEmpty(Model.Role))
                {
                    <p class="text-muted mb-4">
                        Your role: <span class="badge bg-primary">@Model.Role</span>
                    </p>
                }
                <hr class="my-4" />
                <p class="small text-muted mb-4">
                    You can now access the portal using your email and password.
                </p>
                <div class="d-grid gap-2">
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Continue to Portal
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
