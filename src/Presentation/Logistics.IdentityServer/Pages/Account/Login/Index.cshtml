@page
@model Logistics.IdentityServer.Pages.Account.Login.Index

<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 col-xl-7">
        <div class="text-center mb-4">
            <h1 class="h3 mb-2">Welcome Back</h1>
            <p class="text-muted">Sign in to your account to continue</p>
        </div>

        <partial name="_ValidationSummary" />

        <div class="row g-4">
            @if (Model.View.EnableLocalLogin)
            {
                <div class="@(Model.View.VisibleExternalProviders.Any() ? "col-lg-6" : "col-12")">
                    <div class="card h-100">
                        <div class="card-header">
                            <h2>Sign in with Email</h2>
                        </div>
                        <div class="card-body">
                            <form asp-page="/Account/Login/Index" method="post">
                                <input type="hidden" asp-for="Input.ReturnUrl" />

                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email Address</label>
                                    <input class="form-control" type="email" asp-for="Input.Email" placeholder="you@example.com" autofocus />
                                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <input type="password" class="form-control" asp-for="Input.Password" placeholder="Enter your password" autocomplete="current-password" />
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>

                                @if (Model.View.AllowRememberLogin)
                                {
                                    <div class="mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" asp-for="Input.RememberLogin" />
                                            <label class="form-check-label" asp-for="Input.RememberLogin">Remember me</label>
                                        </div>
                                    </div>
                                }

                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary" type="submit" name="Input.Button" value="login">
                                        Sign In
                                    </button>
                                </div>

                                <div class="mt-3 text-center">
                                    <a asp-page="/Account/ForgotPassword/Index" class="small text-muted">
                                        Forgot your password?
                                    </a>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 text-center py-3">
                            <span class="text-muted small">Don't have an account?</span>
                            <a asp-page="/Account/Register/Index" class="small fw-medium">Sign up</a>
                        </div>
                    </div>
                </div>
            }

            @if (Model.View.VisibleExternalProviders.Any())
            {
                <div class="@(Model.View.EnableLocalLogin ? "col-lg-6" : "col-12")">
                    <div class="card h-100">
                        <div class="card-header">
                            <h2>Or continue with</h2>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-center">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.View.VisibleExternalProviders)
                                {
                                    <a class="btn btn-outline-secondary"
                                       asp-page="/ExternalLogin/Challenge"
                                       asp-route-scheme="@provider.AuthenticationScheme"
                                       asp-route-returnUrl="@Model.Input.ReturnUrl">
                                        @if (provider.AuthenticationScheme.Contains("Google", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <svg class="me-2" width="18" height="18" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4" />
                                                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853" />
                                                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05" />
                                                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335" />
                                            </svg>
                                        }
                                        @provider.DisplayName
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.View.EnableLocalLogin && !Model.View.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning mt-4">
                <strong>Invalid login request</strong>
                <p class="mb-0 mt-1 small">There are no login schemes configured for this request.</p>
            </div>
        }
    </div>
</div>
